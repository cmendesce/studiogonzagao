block append styles
	link(rel='stylesheet', href='/css/index.css')
	link(rel='stylesheet', href='/css/carousel.css')

block append scripts
	script.
		$(function () {
			var song;
			$('#helloween').hover(
			function () {
				if ($('audio').length) {
					startSong();
				} else {
					song = setTimeout(startSong, 5000)
				}
			},
			function () {
				clearTimeout(song);
				$('audio').trigger("pause");
			});

			function startSong() {
				if ($('audio').length) {
					$('audio').trigger("play");
				} else {
					var pumpkin = " " + String.fromCharCode(0xD83C, 0xDF83) + " ",
						newName = pumpkin + $('h1.lobster').text() + pumpkin;
					document.title = newName ;
					$('h1.lobster').text(newName);
					var music = new Date() % 2? '/music/iwantout.mp3' : '/music/littletime.mp3';
					$("<audio></audio>").attr({
						'src': music,
						'volume':0.4,
						'autoplay':'autoplay'
					}).hide().appendTo("body");
				}
				return true;
			}
		});

