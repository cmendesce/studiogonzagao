nav.navbar.navbar-static-top.navbar-default(role='navigation')
	.container
		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand.lobster(href='/') Studio Gonzag√£o
		#navbar.collapse.navbar-collapse
			ul.nav.navbar-nav
				li(class= index === undefined ? "" : "active")
					a(href='/') #{ __("menu.home") }
				if session.user
					include options.jade
				li(class= about === undefined ? "" : "active").disabled
					a(href='#') #{ __("menu.about") }
				li(class= project === undefined ? "" : "active").disabled
					a(href="#") #{ __("menu.project") }
			ul.nav.navbar-nav.navbar-right
				if session.user
					li.dropdown
						a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') !{ session.user.name }
						ul.dropdown-menu(role='menu') 
							li
								a(href="/login/logout") !{ __("menu.logout")}
				else
					li(class= login === undefined ? "" : "active")
						a(href='/login') #{ __("login.login") }
					li(class= register === undefined ? "" : "active")
						a(href="user/register") #{ __("login.register") }

